<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light Themes -->
    <style name="DefaultSynthwaveTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/mat_purple</item>
        <item name="backgroundTint">@color/mat_dark_grey_purple_overlay</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/blackish</item>
        <item name="actionBarStyle">@style/SynthwaveActionBarStyle</item>
        <item name="dialogTheme">@style/SynthwaveDialogTheme</item>
        <item name="alertDialogTheme">@style/SynthwaveDialogTheme</item>
        <item name="colorControlHighlight">@color/mat_dark_grey_purple_overlay_original</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/mat_dark_grey_purple_overlay</item>
    </style>

    <style name="SynthwaveActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="background">@color/black</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="SynthwaveDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/mat_purple</item>
        <item name="android:colorBackground">@color/blackish</item>
        <item name="backgroundTint">@color/mat_dark_grey_purple_overlay</item>
        <item name="android:windowBackground">@color/mat_dark_grey_purple_overlay</item>
    </style>

    <style name="AlarmAlertFullScreenSynthwaveTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/mat_purple</item>
    </style>

    <style name="TimePickerDialogFragmentSynthwave" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="timePickerDeleteButtonStyle">@style/TimePickerDeleteButtonStyle</item>
        <item name="colorAccent">@color/mat_purple</item>
        <item name="android:backgroundTint">@color/mat_dark_grey_purple_overlay</item>
    </style>
</resources>